<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">




    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.priyanka.mapsdemo.MapsActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/group" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/group"
    android:weightSum="1">
    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:text="Hospitals" />

    <Button
        android:id="@+id/B_Doctor"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/B_hopistals"
        android:layout_toRightOf="@+id/B_hopistals"
        android:onClick="onClick"
        android:text="Doctor" />

    <Button
        android:id="@+id/B_Phar"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/B_Doctor"
        android:layout_toRightOf="@+id/B_Doctor"
        android:onClick="onClick"
        android:text="Pharmacy" />

    <Button
        android:id="@+id/B_to"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/B_Phar"
        android:layout_toRightOf="@+id/B_Phar"
        android:onClick="onClick"
        android:text="Supermarket" />

</LinearLayout>


</RelativeLayout>